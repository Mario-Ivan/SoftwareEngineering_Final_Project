
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User{
  id Int @id @default(autoincrement())
  firstName String 
  lastName String
  userName String
  password String 
  email String @unique
  telepon String? @unique
  profile String?

  Payment Payment[]

  Post Post[]
}

model Payment {
  id Int @id @default(autoincrement())
  amount Float
  firstNameCustom String
  lastNameCustom String
  paymentMethod String
  paymentDate DateTime @default(now())
  userId Int
  paymentStatus Boolean
  user User @relation(fields: [userId], references: [id])
}

model Vids{
  id Int @id @default(autoincrement())
  name String
  title String
  category String
  description String
  filePath String
  fileKey String
  uploadTime DateTime @default(now())
}

model Post{
  id Int @id @default(autoincrement())
  title String
  content String
  createdAt DateTime @default(now())
  userId Int
  user User @relation(fields: [userId], references: [id])
  pictures Picture[]
}

model Picture {
    id Int @id @default(autoincrement())
    url String
    postId Int
    post Post @relation(fields: [postId], references: [id])
  }